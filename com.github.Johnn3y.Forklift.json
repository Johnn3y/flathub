{
  "id" : "com.github.Johnn3y.Forklift",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "3.34",
  "runtime-commit" : "4729b7b5c9fa77deabb2c14e39ea77f7c2ea4f7c1d25c5136c8665a0d350d003",
  "sdk" : "org.gnome.Sdk",
  "sdk-commit" : "fa0a5022e5da88bec837c2d1f2ff02d9be690263fa0e36e9da70657092904923",
  "cleanup" : [
    "/include",
    "/lib/pkgconfig"
  ],
  "finish-args" : [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--share=network",
    "--filesystem=home"
  ],
  "modules" : [
    "shared-modules/lame/lame-3.99.5.json",
    {
      "name" : "ffmpeg",
      "config-opts" : [
        "--enable-shared",
        "--disable-static",
        "--disable-doc",
        "--disable-ffplay",
        "--disable-devices",
        "--enable-gnutls",
        "--enable-libmp3lame",
        "--enable-libvorbis"
      ],
      "sources" : [
        {
          "url" : "https://ffmpeg.org/releases/ffmpeg-4.0.2.tar.xz",
          "sha256" : "a95c0cc9eb990e94031d2183f2e6e444cc61c99f6f182d1575c433d62afb2f97",
          "type" : "archive"
        }
      ],
      "cleanup" : [
        "/share/ffmpeg"
      ],
      "post-install" : [
        "install -Dm644 COPYING.LGPLv3 /app/share/licenses/ffmpeg/COPYING"
      ]
    },
    {
      "name" : "youtube-dl",
      "buildsystem" : "simple",
      "ensure-writable" : [
        "/lib/python*/site-packages/easy-install.pth"
      ],
      "sources" : [
        {
          "url" : "https://github.com/rg3/youtube-dl",
          "tag" : "2019.09.28",
          "commit" : "f4b865c6136547a5af814526b65c08c89dbe3a14",
          "type" : "git"
        }
      ],
      "build-commands" : [
        "python3 setup.py build",
        "python3 setup.py install --prefix=/app"
      ]
    },
    {
      "name" : "libhandy",
      "buildsystem" : "meson",
      "config-opts" : [
        "-Dexamples=false",
        "-Dtests=false"
      ],
      "sources" : [
        {
          "url" : "https://source.puri.sm/Librem5/libhandy",
          "branch" : "v0.0.11",
          "commit" : "d0b3abf7a520e80c2c2155fa3da83962d2b80221",
          "type" : "git"
        }
      ]
    },
    {
      "name" : "Forklift",
      "buildsystem" : "meson",
      "sources" : [
        {
          "url" : "https://github.com/Johnn3y/Forklift",
          "branch" : "master",
          "commit" : "3a14976e9e93df0b07bfc36bc6a35bf35b956b48",
          "type" : "git"
        }
      ]
    }
  ]
}
